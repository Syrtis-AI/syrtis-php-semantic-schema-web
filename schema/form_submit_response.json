{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/Syrtis-AI/syrtis-php-semantic-schema-web/tree/main/schema/form_submit_response.json",
  "title": "Form submit response",
  "type": "object",
  "properties": {
    "ok": {
      "type": "boolean"
    },
    "form": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "errors": {
          "type": "object",
          "properties": {
            "form": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "fields": {
              "type": "object",
              "additionalProperties": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "count": {
              "type": "integer",
              "minimum": 0
            }
          },
          "required": ["form", "fields", "count"]
        }
      },
      "required": ["name", "errors"]
    },
    "redirect": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["url"]
    }
  },
  "required": ["ok", "form"]
}
